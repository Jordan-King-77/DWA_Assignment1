        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Child2Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Child2Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Child3Email, new { @class = "col-md-2 control-label" })

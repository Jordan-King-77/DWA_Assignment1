@model DWA_Assignment1.Models.LaneViewModel

@{
    ViewBag.Title = "Create Lane";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("CreateLane", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })

<div class="form-group">
    @Html.LabelFor(model => model.EventId, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.EventId, new { @readonly = "readonly" }@*, new { htmlAttributes = new { @class = "form-control" } }*@)
        @Html.ValidationMessageFor(model => model.EventId, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        @Html.LabelFor(m => m.LaneNumber, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LaneNumber, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.SwimmerEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SwimmerEmail, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Heat, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Heat, new { @class = "form-control" })
        </div>
    </div>

    <input type="submit" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
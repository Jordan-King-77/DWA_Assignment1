@model DWA_Assignment1.Models.SearchViewModel
@{
    ViewBag.Title = "Search Events";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SearchEventResults", "Home", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.EventAgeRange, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.EventAgeRange, new List<SelectListItem>
                {
                    new SelectListItem{},
                    new SelectListItem{ Text="Junior", Value="Junior"},
                    new SelectListItem{ Text="Senior", Value="Senior"}
                })
            @Html.ValidationMessageFor(model => model.EventAgeRange, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EventGender, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.EventGender, new List<SelectListItem>
        {
            new SelectListItem{},
            new SelectListItem{ Text="Male", Value="Male"},
            new SelectListItem{ Text="Female", Value="Female"}
        })
            @Html.ValidationMessageFor(model => model.EventGender, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EventDistance, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.EventDistance, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EventDistance, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EventSwimStroke, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.EventSwimStroke, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EventSwimStroke, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

</div>
}